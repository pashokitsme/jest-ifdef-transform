{
  "name": "jest-ifdef-transform",
  "version": "1.0.1",
  "description": "Analog https://www.npmjs.com/package/ifdef-loader for jest",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "author": "Stepan Mikhailiuk <istepancar@gmail.com>",
  "repository": "https://github.com/stepancar/jest-ifgef-transform",
  "license": "MIT",
  "keywords": [
    "jest",
    "transform",
    "ifdef-loader"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "test": "run-s build test:*",
    "test:lint": "eslint src --ext .ts",
    "watch:build": "tsc -p tsconfig.json -w",
    "watch:test": "jest",
    "version": "standard-version",
    "reset-hard": "git clean -dfx && git reset --hard && yarn",
    "prepare-release": "run-s reset-hard test doc:html version doc:publish",
    "postinstall": "npm run build"
  },
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "ifdef-loader": "^2.3.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.8.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-functional": "^3.0.2",
    "eslint-plugin-import": "^2.22.0",
    "npm-run-all": "^4.1.5",
    "standard-version": "^9.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3",
    "@jest/transform": "^29.7.0"
  },
  "peerDependencies": {
    "@jest/transform": "^29.7.0"
  },
  "files": [
    "build/main",
    "build/module",
    "!**/*.spec.*",
    "!**/*.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
